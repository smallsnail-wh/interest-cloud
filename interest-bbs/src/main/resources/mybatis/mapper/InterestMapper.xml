<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.interest.bbs.dao.InterestDao">
    <resultMap id="interestMap"
               type="com.interest.bbs.model.entity.InterestEntity">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="info" property="info"/>
        <result column="content" property="content"/>
        <result column="image" property="image"/>
        <result column="sort" property="sort"/>
        <result column="banner" property="banner"/>
    </resultMap>

    <resultMap id="interestResponse"
               type="com.interest.bbs.model.response.InterestResponse">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="info" property="info"/>
        <result column="image" property="image"/>
    </resultMap>

    <resultMap id="bannerResponse"
               type="com.interest.bbs.model.response.BannerResponse">
        <id column="id" property="id"/>
        <result column="image" property="image"/>
    </resultMap>

    <select id="getBanners" resultMap="bannerResponse">
        select id,image from interest
        <where>
            banner = 1
        </where>
        <![CDATA[ order by sort desc ]]>
    </select>

    <select id="getInterest" resultMap="interestResponse">
        select id,title,image,info from interest
        <where>
            <if test="title != null and title != ''">
                title like CONCAT('%',#{title},'%')
            </if>
        </where>
        order by sort asc
    </select>

    <select id="getInsterestById" resultMap="interestMap">
        select * from interest
        <where>
            id = #{id}
        </where>
    </select>

</mapper>